<div id="due-date-modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <h3 id="myModalLabel">Change Dates </h3>
  </div>
  <div class="modal-body">
    <%= form_for(assignment) do |f| %>
      <div class="field" >
        <%= f.label :active_at %>
        <%= f.text_field :active_at, class: "datetimepicker"%>
      </div>
      <div class="field">
        <%= f.label :due_at %>
        <%= f.text_field :due_at, class: "datetimepicker"%>
      </div>
      <div class="modal-footer">
        <div class="actions">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
